<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Product</title>
    <link rel="stylesheet" href="/admin/stylesheets/updateproduct.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>Update Product</h1>
    <form action="/products/update/<%= product._id %>" method="POST" enctype="multipart/form-data">
        <div>
            <label for="productName">Product Name:</label>
            <input type="text" name="productName" value="<%= product.productName %>" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea name="description" required><%= product.description %></textarea>
        </div>
        <div>
            <label for="sizes">Sizes:</label>
            <select name="sizes" id="size-select">
                <option value="">Select Size</option>
                <option value="S">Small</option>
                <option value="M">Medium</option>
                <option value="L">Large</option>
                <option value="XL">Extra Large</option>
            </select>
            <div id="selected-sizes">
                <% product.sizesAvailable.forEach(size => { %>
                    <span><%= size %> <button type="button" class="remove-size">Remove</button></span>
                <% }) %>
            </div>
        </div>
        <div>
            <label for="colors">Colors:</label>
            <select name="colors" id="color-select">
                <option value="">Select Color</option>
                <option value="red">Red</option>
                <option value="blue">Blue</option>
                <option value="green">Green</option>
                <option value="black">Black</option>
            </select>
            <div id="selected-colors">
                <% product.availableColors.forEach(color => { %>
                    <span><%= color %> <button type="button" class="remove-color">Remove</button></span>
                <% }) %>
            </div>
        </div>
        <div>
            <label for="images">Upload Images (min 3):</label>
            <input type="file" name="images" accept="image/*" multiple id="image-upload">
            <div id="uploaded-images">
                <% product.images.forEach(image => { %>
                    <div class="uploaded-image">
                        <img src="<%= image %>" alt="Product Image" style="width: 100px; height: auto;">
                        <button type="button" class="remove-image">Remove</button>
                    </div>
                <% }) %>
            </div>
        </div>
        <button type="submit">Update Product</button>
    </form>

    <script>
        $(document).ready(function () {
            // Handle size selection
            $('#size-select').on('change', function () {
                const size = $(this).val();
                if (size && !$('#selected-sizes').find(`span:contains(${size})`).length) {
                    $('#selected-sizes').append(`<span>${size} <button type="button" class="remove-size">Remove</button></span>`);
                }
                $(this).val(''); // Reset the select
            });

            // Handle color selection
            $('#color-select').on('change', function () {
                const color = $(this).val();
                if (color && !$('#selected-colors').find(`span:contains(${color})`).length) {
                    $('#selected-colors').append(`<span>${color} <button type="button" class="remove-color">Remove</button></span>`);
                }
                $(this).val(''); // Reset the select
            });

            // Remove size
            $('#selected-sizes').on('click', '.remove-size', function () {
                $(this).parent('span').remove();
            });

            // Remove color
            $('#selected-colors').on('click', '.remove-color', function () {
                $(this).parent('span').remove();
            });

            // Handle image uploads
            $('#image-upload').on('change', function () {
                const files = $(this).prop('files');
                $('#uploaded-images').empty(); // Clear previous images
                if (files.length > 0) {
                    for (let i = 0; i < files.length; i++) {
                        const file = files[i];
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            $('#uploaded-images').append(`
                                <div class="uploaded-image">
                                    <img src="${e.target.result}" alt="${file.name}" style="width: 100px; height: auto;">
                                    <button type="button" class="remove-image">Remove</button>
                                </div>
                            `);
                        };
                        reader.readAsDataURL(file);
                    }
                }
            });

            // Remove image
            $('#uploaded-images').on('click', '.remove-image', function () {
                $(this).parent('.uploaded-image').remove();
            });
        });
    </script>
</body>
</html>
