<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Management</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/admin/stylesheets/stylec.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Category Management</h1>
    
        <% if (success_msg) { %>
            <div class="alert alert-success" role="alert">
                <%= success_msg %>
            </div>
        <% } %>
        <% if (error_msg) { %>
            <div class="alert alert-danger" role="alert">
                <%= error_msg %>
            </div>
        <% } %>
    
        <!-- Form to Add a New Category -->
        <form action="/admin/categories/add" method="POST" class="mb-4">
            <div class="mb-3">
                <label for="category" class="form-label">Add New Category</label>
                <input type="text" name="category" id="category" class="form-control" placeholder="Enter category name" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Category</button>
        </form>
    
        <!-- List of Existing Categories -->
        <h2>Existing Categories</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(function(category, index) { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= category.category %></td>
                        <td>
                            <!-- Form to Edit Category -->
                            <form action="/admin/categories/edit/<%= category._id %>" method="POST" class="d-inline-block">
                                <input type="text" name="newCategoryName" class="form-control d-inline-block" placeholder="Edit Category" required>
                                <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                            </form>
    
                            <!-- Form to Soft Delete Category -->
                            <form action="/admin/categories/delete/<%= category._id %>" method="POST" class="d-inline-block">
                                <button type="submit" class="btn btn-danger btn-sm"><%= category.isDeleted ? 'Restore' : 'Delete' %></button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
