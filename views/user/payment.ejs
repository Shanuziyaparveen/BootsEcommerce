<style>
 <style>
  body {
    background-color: #1c1832;
    color: #e9e9f4;
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
  }

  header, footer {
    background-color: #2a2441;
    color: #d5c8f3;
    padding: 15px;
    text-align: center;
    font-size: 14px;
    border-top: 3px solid #423974;
    border-bottom: 3px solid #423974;
  }

  header a, footer a {
    color: #c4b4ed;
    text-decoration: none;
    margin: 0 8px;
    transition: color 0.3s ease;
  }

  header a:hover, footer a:hover {
    color: #9c82e0;
  }

  .container {
    max-width: 750px;
    margin: 50px auto;
    padding: 40px;
    background-color: #292143;
    border-radius: 15px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
    text-align: center;
  }

  h1 {
    margin-bottom: 30px;
    color: #e2d4f7;
    font-size: 28px;
  }

  .payment-methods {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 20px;
  }

  .payment-option {
    display: flex;
    align-items: center;
    background-color: #3a2e5f;
    padding: 15px 20px;
    border-radius: 10px;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  .payment-option input[type="radio"] {
    width: 18px;
    height: 18px;
    margin-right: 12px;
    cursor: pointer;
  }

  .payment-option label {
    color: #ded9f8;
    font-size: 16px;
    cursor: pointer;
  }

  .payment-option:hover {
    transform: scale(1.02);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
  }

  .confirm-payment-button {
    margin-top: 30px;
    padding: 14px 30px;
    background-color: #6e4bd6;
    color: #fff;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease, transform 0.2s ease;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }

  .confirm-payment-button:hover {
    background-color: #5a39b0;
    transform: scale(1.05);
  }

  .breadcrumb {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-bottom: 40px;
  }

  .breadcrumb a {
    color: #c4b4ed;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s ease;
  }

  .breadcrumb a:hover {
    color: #9f87d8;
  }

  .breadcrumb span {
    color: #a893cf;
  }

  form {
    margin-top: 20px;
  }
</style>


<body>
  <div class="container">
    <div class="page-header breadcrumb-wrap">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span>&gt;</span>
        <a href="/Wishlist" rel="nofollow">Wishlist</a>
        <span>&gt;</span>
        <a href="/cart" rel="nofollow">Cart</a>
      </div>
    </div>
    <h1>Select Payment Method</h1>
    <form action="/process-payment" method="POST">
      <div class="payment-methods">
        <% availableMethods.forEach(method => { %>
          <div class="payment-option">
            <input type="radio" id="<%= method %>" name="paymentMethod" value="<%= method %>">
            <label for="<%= method %>"><%= method %></label>
          </div>
        <% }) %>
      </div>
      <button type="submit" class="confirm-payment-button">Confirm and Proceed</button>
    </form>
  </div>
  <%- include("../../views/partials/user/footer") %>
</body>
