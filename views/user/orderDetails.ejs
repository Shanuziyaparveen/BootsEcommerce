
<%- include("../../views/partials/user/header") %>
<style>
    /* General Page Styles */
    .order-confirmed-page {
      background: linear-gradient(135deg, #1d1f21, #3c3f42);
      color: #f5f5f5;
      text-align: center;
      padding: 40px 20px;
      font-family: 'Roboto', sans-serif;
    }
  
    .order-confirmed-page h1 {
      font-size: 3em;
      margin-bottom: 30px;
      color: #ffd700;
      font-weight: bold;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
    }
  
    /* Order Summary Styles */
    .order-summary {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 15px;
      padding: 30px;
      margin-bottom: 40px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }
  
    .order-summary h2 {
      margin-bottom: 20px;
      color: #00ffcc;
      font-weight: 600;
      border-bottom: 2px solid #00ffcc;
      display: inline-block;
      padding-bottom: 5px;
    }
  
    .cart-items {
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin-top: 20px;
    }
  
    .cart-item {
      display: flex;
      align-items: center;
      gap: 20px;
      padding: 10px 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }
  
    .cart-item img {
      width: 100px;
      height: 100px;
      object-fit: cover;
      border-radius: 8px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
  
    .cart-item-details h5 {
      font-size: 1.5em;
      margin: 0;
      color: #ffd700;
    }
  
    .cart-item-details p {
      margin: 5px 0;
      color: #e0e0e0;
    }
  
    .order-total {
      margin-top: 20px;
      font-size: 1.2em;
      color: #fff;
    }
  
    .order-total h3 {
      font-weight: 700;
      margin-bottom: 10px;
    }
  
    /* Address Section Styles */
    .address-section {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 15px;
      padding: 30px;
      margin-bottom: 40px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }
  
    .address-section h2 {
      margin-bottom: 15px;
      color: #00ffcc;
      font-weight: 600;
    }
  
    .address-section h3 {
      margin-bottom: 10px;
      color: #ffd700;
    }
  
    .address-section p {
      margin: 5px 0;
      color: #e0e0e0;
    }
  
    /* Payment Method Styles */
    .payment-method {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 15px;
      padding: 30px;
      margin-bottom: 40px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }
  
    .payment-method h2 {
      margin-bottom: 15px;
      color: #00ffcc;
      font-weight: 600;
    }
  
    .payment-method p {
      margin: 5px 0;
      color: #e0e0e0;
    }
  
    /* Confirmation Icon and Message */
    .confirmation-icon {
      margin-top: 30px;
      font-size: 3.5em;
      color: #32cd32;
      animation: fade-in 1s ease-in-out;
    }
  
    .confirmation-icon p {
      font-size: 1.2em;
      margin-top: 15px;
      color: #e0e0e0;
    }
  
    /* Button to Go Back to Home */
    .home-button {
      display: inline-block;
      margin-top: 40px;
      padding: 12px 25px;
      background: linear-gradient(135deg, #ffd700, #ff8c00);
      color: #1d1f21;
      border: none;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
      font-size: 1.1em;
      transition: transform 0.3s, box-shadow 0.3s;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
  
    .home-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
    }
  
    /* Keyframe Animations */
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: scale(0.8);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }
  </style>
  

<body>
    <!-- Order Confirmed Page -->
<div class="order-confirmed-page">
    <h1>Order Confirmed</h1>

    <!-- Order Summary Section -->
    <% if (totalItems > 0) { %>
        <div class="order-summary">
            <h2>Your Order</h2>
            <div class="cart-items">
                <% cartItems.forEach(item => { %>
                    <div class="cart-item">
                        <img  src="/uploads/re-image/<%= item.productId.productImage[0]%>" alt="<%= item.name %>">

                        <div class="cart-item-details">
                            <h5><%= item.productId.productName %></h5>
                          
                            <p>Quantity: <%= item.quantity %></p>
                            <p>Total:  ₹<%= item.totalPrice %></p>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Display Cart Total (Total Amount) -->
            <div class="order-total">
                <h3 style="color: aliceblue;">Total Amount</h3>
                <p> ₹<%= cartTotal %></p> <!-- Display the total amount here -->
            </div>
        </div>
    <% } %>
</div>

    <!-- Address Section -->
    <div class="address-section">
        <h2>Delivery Address</h2>
        <h3><%= address.name %></h3>
        <p><%= address.street %>,<%= address.city %>, <%= address.pincode %></p>
        <p><%= address.state %></p>
    </div>

    <!-- Payment Method Section -->
    <div class="payment-method">
        <h2>Payment Method</h2>
        <p><%= paymentMethod %></p>
    </div>

    <!-- Confirmation Icon and Message -->
    <div class="confirmation-icon">
        <i class="fas fa-check-circle"></i>
        <p>Your order has been placed successfully!</p>
    </div>

    <!-- Button to Go Back to Home -->
    <a href="/" class="home-button">Go Back to Home</a>
</div>

</body>


<!-- Include Footer -->
<%- include("../../views/partials/user/footer") %>
