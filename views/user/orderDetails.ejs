
<%- include("../../views/partials/user/header") %>
<style>
  /* General Page Styles */
  .order-confirmed-page {
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    color: #343a40;
    text-align: center;
    padding: 40px 20px;
    font-family: 'Poppins', sans-serif;
  }

  .order-confirmed-page h1 {
    font-size: 2.8em;
    margin-bottom: 20px;
    color: #28a745;
    font-weight: 600;
  }

  /* Order Summary Styles */
  .order-summary, .address-section, .payment-method {
    background: #ffffff;
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 30px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .order-summary h2, .address-section h2, .payment-method h2 {
    font-size: 1.8em;
    margin-bottom: 15px;
    color: #007bff;
    border-bottom: 3px solid #007bff;
    display: inline-block;
  }

  .cart-item {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 10px 0;
    border-bottom: 1px solid #dee2e6;
  }

  .cart-item img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 8px;
  }

  .cart-item-details h5 {
    font-size: 1.2em;
    margin: 0;
    color: #495057;
  }

  .order-total h3 {
    color: #495057;
    font-weight: 700;
    margin-bottom: 5px;
  }

  /* Confirmation Icon and Message */
  .confirmation-icon {
    font-size: 4em;
    color: #28a745;
    margin-bottom: 10px;
    animation: bounce-in 0.6s ease;
  }

  .confirmation-icon p {
    font-size: 1.3em;
    color: #6c757d;
  }

  /* Button Styles */
  .home-button {
    display: inline-block;
    padding: 12px 30px;
    background: #007bff;
    color: #fff;
    border-radius: 5px;
    text-decoration: none;
    font-size: 1em;
    transition: all 0.3s;
  }

  .home-button:hover {
    background: #0056b3;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }

  /* Keyframe Animation */
  @keyframes bounce-in {
    0% {
      transform: scale(0.8);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>

  <body>
    <!-- Order Confirmed Page -->
    <div class="order-confirmed-page">
        <h1>Order Confirmed</h1>

        <!-- Order Summary Section -->
        <% if (totalItems > 0) { %>
            <div class="order-summary">
                <h2>Your Order</h2>
                <div class="cart-items">
                  <% cartItems.forEach(item => { %>
                    <div class="cart-item">
                        <img src="/uploads/re-image/<%= item.product.productImage[0] %>" alt="<%= item.product.productName %>">
                        <div class="cart-item-details">
                            <h5><%= item.product.productName %></h5>
                            <p>Quantity: <%= item.quantity %></p>
                            <p>Total: ₹<%= item.price %></p>
                        </div>
                    </div>
                <% }) %>
                
                </div>

                <!-- Display Cart Total (Total Amount) -->
                <div class="order-total">
                  <h3 style="color: rgb(11, 41, 67);">Total Amount: ₹<%= initialCartTotal %></h3>
                                      <p style="color: rgb(9, 40, 66);">payment of: ₹<%= finalAmount %> via <%=paymentMethod%></p> <!-- Display the total amount here -->
                </div>
            </div>
        <% } %>
    </div>
    <hr style="border-top: 1px solid #dee2e6; margin: 30px 0;">

    <!-- Address Section -->
    <div class="address-section">
        <h2>Delivery Address</h2>
        <h3><%= address.name %></h3>
        <p><%= address.street %>, <%= address.city %>, <%= address.pincode %></p>
        <p><%= address.state %></p>
    </div>
    <hr style="border-top: 1px solid #dee2e6; margin: 30px 0;">

    <!-- Payment Method Section -->
    <div class="payment-method">
        <h2>Payment Method</h2>
        <p><%= paymentMethod %></p>
    </div>

    <!-- Confirmation Icon and Message -->
    <div class="confirmation-icon">
        <i class="fas fa-check-circle"></i>
        <p>Your order has been placed successfully!</p>
    </div>
    <hr style="border-top: 1px solid #dee2e6; margin: 30px 0;">

    <!-- Button to Go Back to Home -->
    <a href="/" class="home-button">Go Back to Home</a>
</div>

</body>

<!-- Include Footer -->
<%- include("../../views/partials/user/footer") %>
