<%- include("../../views/partials/user/header") %>
<style>
    /* General Styles */
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        color: #333;
        line-height: 1.6;
    }

    h1, h2, h3, h4, h5, h6 {
        margin: 0 0 10px;
    }

    a {
        text-decoration: none;
        color: #007bff;
    }

    .container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px 0;
    }

    /* Header and Footer */
    header, footer {
        background-color: #007bff;
        color: #fff;
        text-align: center;
        padding: 10px 0;
    }

    footer {
        font-size: 0.9em;
    }

    /* Breadcrumb Styles */
    .breadcrumb {
        font-size: 0.9em;
        margin: 15px 0;
        color: #666;
    }

    .breadcrumb a {
        color: #007bff;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    /* Product Listing Styles */
    .product-list {
        text-align: center;
        margin-top: 20px;
    }

    .product-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .product-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        width: 250px;
        transition: transform 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .product-card:hover {
        transform: translateY(-5px);
    }

    .product-card img {
        width: 100%;
        height: auto;
        border-bottom: 1px solid #ddd;
    }

    .product-card h3 {
        font-size: 1.1em;
        padding: 10px;
        color: #333;
    }

    .product-card .price {
        font-size: 1.2em;
        color: #007bff;
        margin: 10px;
    }

    .product-card .original-price {
        font-size: 0.9em;
        color: #999;
        text-decoration: line-through;
    }

    .product-card .rating {
        font-size: 0.9em;
        color: #ff9800;
    }

    .product-card .availability {
        font-size: 0.9em;
        color: #28a745;
    }

    .product-card .sold-out {
        color: #e74c3c;
    }

    /* Product Details Page Styles */
    .product-details {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        margin-top: 20px;
    }

    .image-section {
        flex: 1;
        min-width: 300px;
    }

    .image-section img {
        width: 100%;
        height: auto;
        border-radius: 5px;
        transition: transform 0.2s ease;
    }

    .image-section img:hover {
        transform: scale(1.05);
    }

    .thumbnails {
        display: flex;
        gap: 10px;
        margin-top: 10px;
    }

    .thumbnail {
        width: 50px;
        height: 50px;
        cursor: pointer;
        border: 1px solid #ddd;
        border-radius: 3px;
    }

    .details-section {
        flex: 2;
        min-width: 300px;
    }

    .details-section h1 {
        font-size: 2em;
        margin-bottom: 10px;
    }

    .details-section .price {
        font-size: 1.5em;
        color: #007bff;
        margin-bottom: 10px;
    }

    .details-section .original-price {
        font-size: 1em;
        color: #999;
        text-decoration: line-through;
    }

    .details-section .coupon {
        font-size: 0.9em;
        color: #28a745;
        margin-bottom: 10px;
    }

    .details-section .rating {
        font-size: 1em;
        color: #ff9800;
    }

    .details-section .stock {
        font-size: 1em;
        margin-bottom: 15px;
    }

    .details-section .in-stock {
        color: #28a745;
    }

    .details-section .out-of-stock {
        color: #e74c3c;
    }

    .details-section ul {
        list-style-type: disc;
        margin: 10px 0 20px 20px;
        color: #555;
    }

    .reviews {
        margin-bottom: 20px;
    }

    .reviews p {
        font-size: 0.9em;
        margin: 5px 0;
        color: #666;
    }

    .related-products {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .related-product-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        width: 200px;
        text-align: center;
        transition: transform 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .related-product-card:hover {
        transform: translateY(-5px);
    }

    .related-product-card img {
        width: 100%;
        height: auto;
    }

    .related-product-card h4 {
        font-size: 1em;
        padding: 10px;
        color: #333;
    }

    .related-product-card p {
        font-size: 0.9em;
        color: #007bff;
        margin-bottom: 10px;
    }

    .btn:hover {
        background-color: #ff4c4c;
        transform: translateY(-2px);
    }

    .btn:active {
        transform: translateY(1px);
    }

    .wishlist-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 10px;
        border-radius: 50%;
        color: #ff6b6b;
        font-size: 18px;
        z-index: 10;
        transition: background-color 0.3s, color 0.3s, transform 0.3s;
    }

    .wishlist-btn:hover {
        background-color: rgba(255, 255, 255, 1);
        color: #ff4c4c;
        transform: translateY(-2px);
    }

    .wishlist-btn:active {
        transform: translateY(1px);
    }

    .product-img-action-wrap {
        position: relative;
    }

    .product-img {
        position: relative;
        display: block;
        overflow: hidden;
    }

    .product-cart-wrap {
        border: 1px solid #eee;
        padding: 20px;
        margin-bottom: 30px;
    }

    .product-content-wrap h6 {
        font-size: 18px;
        color: #333;
        margin-bottom: 5px;
    }

    .product-content-wrap h5 {
        font-size: 16px;
        color: #ff6b6b;
        margin-bottom: 10px;
    }

    .product-content-wrap a {
        display: inline-block;
        padding: 8px 12px;
        background-color: #ff6b6b;
        color: white;
        text-transform: uppercase;
        font-size: 14px;
        border-radius: 4px;
        text-decoration: none;
    }

    .dark-purple-btn {
        background-color: #4B0082;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .dark-purple-btn:hover {
        background-color: #5D3FD3;
    }

    .dark-purple-btn:active {
        background-color: #3A0069;
    }

    .product-content-wrap a:hover {
        background-color: #ff4c4c;
    }
    .out-of-stock {
    color: red;
    font-weight: bold;
    font-size: 16px;
    margin-top: 10px;
    text-align: center;
}
.price {
    font-size: 1rem;
    margin: 10px 0;
}

.regular-price {
    font-size: 0.9rem;
    text-decoration: line-through;
    color: #888;
}

.sale-price {
    font-size: 1.1rem;
    color: #ff4c4c;
    font-weight: bold;
    margin-left: 5px;
}

</style>
<body>
    <div class="product-list">
        <h2>Our Products</h2>
        <div class="row product__filter">
            <% products.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                    <div class="product-cart-wrap mb-30">
                        <div class="product-img-action-wrap">
                            <div class="product-img product-img-zoom">
                                <a href="/product/<%= product._id %>">
                                    <img class="default-img" src="/uploads/re-image/<%= product.productImage[0] %>" alt="product" />
                                </a>
                            </div>
                        </div>
                        <div class="product-content-wrap">
                            <h6><%= product.productName %></h6>
                            <h5 class="price">
                                <% if (product.salePrice && product.salePrice < product.regularPrice) { %>
                                    <span class="regular-price" style="text-decoration: line-through; color: #888;">₹<%= product.regularPrice %></span>
                                    <span class="sale-price" style="color: #ff4c4c; margin-left: 5px;">₹<%= product.salePrice %></span>
                                <% } else { %>
                                    <span class="regular-price">₹<%= product.regularPrice %></span>
                                <% } %>
                            </h5>

                            <% if (product.outOfStock) { %>
                                <p class="out-of-stock">Out of Stock</p>
                            <% } else { %>
                                <button class="dark-purple-btn btn add-to-cart-btn" onclick="addToCart('<%= product._id %>')">Add to Cart</button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>

    <%- include("../../views/partials/user/footer") %>
</body>
<script>
// Check if the user is logged in
const isLoggedIn = <%= user ? 'true' : 'false' %>;
function addToCart(productId) {
    if (!isLoggedIn) {
        Swal.fire({
            title: 'Login required!',
            text: 'You need to be logged in to add products to your cart.',
            icon: 'warning',
            confirmButtonText: 'Login'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/login';
            }
        });
        return;
    }

    $.ajax({
        type: 'POST',
        url: '/addToCart',
        contentType: 'application/json', // Set content type to JSON
        data: JSON.stringify({ productId: productId }), // Send the data as JSON
        success: function(response) {
            if (response.success) {
                // If the product was added to the cart successfully
                Swal.fire({
                    title: 'Product added to cart!',
                    icon: 'success',
                    showConfirmButton: false,
                    timer: 1500
                });
            } else {
                // Handle specific errors like out of stock
                Swal.fire({
                    title: 'Out of Stock!',
                    text: response.message || 'Sorry, this product is currently out of stock.',
                    icon: 'error',
                    confirmButtonText: 'Okay'
                });
            }
        },
        error: function(error) {
            // General error handling
            Swal.fire({
                title: 'Error',
                text: 'Could not add product to cart. Please try again.',
                icon: 'error',
                confirmButtonText: 'Okay'
            });
        }
    });
}

</script>
